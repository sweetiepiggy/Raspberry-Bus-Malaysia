<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical" >

	<TextView
		android:id="@+id/title"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		style="@android:style/TextAppearance.Large" />
	<RatingBar
		android:id="@+id/rating_bar"
		style="?android:attr/ratingBarStyleIndicator"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:numStars="5"
		android:rating="3"
		android:stepSize="0.5" />
	<View
		android:layout_width="fill_parent"
		android:layout_height="1dp"
		android:layout_marginTop="5dp"
		android:layout_marginBottom="5dp"
		android:background="@android:color/darker_gray"/>

	<TextView
		android:id="@+id/avg_delay_label"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:textStyle="bold"
		android:text="@string/avg_delay"/>
	<TextView
		android:id="@+id/total_avg_delay"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"/>
	<View
		android:layout_width="fill_parent"
		android:layout_height="1dp"
		android:layout_marginTop="5dp"
		android:layout_marginBottom="5dp"
		android:background="@android:color/darker_gray"/>

	<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/results_layout"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:stretchColumns="1" >
		<TableRow>
			<TextView
				android:id="@+id/route"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textStyle="bold"
				android:gravity="center"
				android:text="@string/route"/>
			<TextView
				android:id="@+id/avg_time"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textStyle="bold"
				android:gravity="center"
				android:text="@string/avg_time"/>
			<TextView
				android:id="@+id/avg_delay"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textStyle="bold"
				android:gravity="center"
				android:text="@string/avg_delay"/>
			<TextView
				android:id="@+id/num_trips"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textStyle="bold"
				android:gravity="center"
				android:text="@string/num_trips"/>
		</TableRow>
	</TableLayout>
</LinearLayout>

