<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.sweetiepiggy.raspberrybusmalaysia"
	android:versionCode="16"
	android:versionName="0.3.0" >

	<uses-sdk android:minSdkVersion="4"
		android:targetSdkVersion="16" />
	<uses-permission android:name="android.permission.INTERNET" />

	<application
		android:icon="@drawable/ic_launcher"
		android:label="@string/app_name" >
		<uses-library android:name="com.google.android.maps" />
		<activity
		android:name=".RaspberryBusMalaysiaActivity"
		android:label="@string/app_name" >
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name="RouteActivity"></activity>
		<activity android:name="CompanyResultActivity"></activity>
		<activity android:name="SubmitTripActivity"></activity>
		<activity android:name="TripsActivity"></activity>
		<activity android:name="TextViewActivity"></activity>
		<activity android:name="RbmMapActivity"
			android:theme="@android:style/Theme.NoTitleBar"></activity>
		<activity android:name="ComplainActivity"></activity>
	</application>
</manifest>

