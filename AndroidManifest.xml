<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.sweetiepiggy.raspberrybusmalaysia"
	android:versionCode="13"
	android:versionName="0.2.4-dev" >

	<uses-sdk android:minSdkVersion="4" />
	<uses-permission android:name="android.permission.INTERNET" />

	<application
		android:theme="@style/RBM_Theme"
		android:icon="@drawable/ic_launcher"
		android:label="@string/app_name" >
		<uses-library android:name="com.google.android.maps" />
		<activity
		android:name=".RaspberryBusMalaysiaActivity"
		android:configChanges="orientation"
		android:label="@string/app_name" >
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name="RouteActivity"></activity>
		<activity android:name="CompanyActivity">
			<intent-filter>
				<action android:name="android.intent.action.SEARCH" />
			</intent-filter>
			<meta-data android:name="android.app.searchable"
				android:resource="@xml/searchable"/>
		</activity>
		<activity android:name="CompanyResultActivity"></activity>
		<activity android:name="SubmitTripActivity"></activity>
		<activity android:name="TripsActivity"></activity>
		<activity android:name="TextViewActivity"></activity>
		<activity android:name="RbmMapActivity"
			android:theme="@android:style/Theme.NoTitleBar"></activity>
		<activity android:name="ComplainActivity"></activity>
	</application>
</manifest>

